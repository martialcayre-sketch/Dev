{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "site": "neuronutrition-app",
      "public": "public",
      "ignore": ["**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "/index.html",
          "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
        }
      ],
      "rewrites": [
        { "source": "/api/**", "run": { "serviceId": "api-app", "region": "europe-west1" } }
      ]
    },
    {
      "target": "patient",
      "public": "apps/patient-vite/dist",
      "ignore": ["**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "/index.html",
          "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
        },
        {
          "source": "/assets/**",
          "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
        }
      ],
      "rewrites": [
        { "source": "/api/**", "run": { "serviceId": "api-app", "region": "europe-west1" } },
        { "source": "**", "destination": "/index.html" }
      ]
    },
    {
      "target": "practitioner",
      "public": "apps/practitioner-vite/dist",
      "ignore": ["**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "/index.html",
          "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
        },
        {
          "source": "/assets/**",
          "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
        }
      ],
      "rewrites": [
        { "source": "/api/**", "run": { "serviceId": "api-app", "region": "europe-west1" } },
        { "source": "**", "destination": "/index.html" }
      ]
    }
  ],
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log"]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "hosting": {
      "port": 5001
    },
    "functions": {
      "port": 5002
    },
    "firestore": {
      "port": 5003
    },
    "auth": {
      "port": 5004,
      "host": "localhost"
    },
    "storage": {
      "port": 5005
    },
    "ui": {
      "enabled": true,
      "port": 5000
    },
    "tasks": {
      "port": 9499
    },
    "singleProjectMode": true
  }
}
