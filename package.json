{
  "name": "neuronutrition-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "apps/*",
    "packages/*",
    "functions",
    "api"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "pnpm --filter web dev",
    "dev:patient-spa": "pnpm -C apps/patient-vite dev",
    "dev:practitioner-spa": "pnpm -C apps/practitioner-vite dev",
    "dev:functions": "pnpm -C functions serve",
    "build:run": "pnpm -C api build",
    "deploy:run": "gcloud run deploy api --source=api --region=europe-west1 --allow-unauthenticated",
    "deploy:run:patient": "gcloud run deploy patient-app --source=apps/patient-vite --region=europe-west1 --allow-unauthenticated",
    "deploy:run:practitioner": "gcloud run deploy practitioner-app --source=apps/practitioner-vite --region=europe-west1 --allow-unauthenticated",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=./apps/*",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "pnpm --filter web format || true",
    "spellcheck": "cspell --no-progress --show-context '**/*.{ts,tsx,js,jsx,md,mdx,html,css}'",
    "spellcheck:fix": "pnpm run spellcheck -- --unique --wordsOnly",
    "extract": "node scripts/extract_pdf_text.mjs",
    "extract:mode": "node scripts/extract_pdf_text.mjs 'Mode de vie'",
    "deploy:hosting:patient": "firebase deploy --only hosting:patient",
    "deploy:hosting:practitioner": "firebase deploy --only hosting:practitioner",
    "dev:emu": "firebase emulators:start --only functions,firestore,auth",
    "dev:patient": "pnpm -C apps/patient-vite dev",
    "dev:practitioner": "pnpm -C apps/practitioner-vite dev",
    "dev:stack:win": "powershell -ExecutionPolicy Bypass -File scripts/dev-local.ps1",
    "dev:stack:mac": "bash scripts/dev-local.sh",
    "dev:stack:linux": "bash scripts/dev-local.sh"
  },
  "devDependencies": {
    "@cspell/dict-fr-fr": "^2.2.0",
    "@playwright/test": "^1.56.1",
    "cspell": "^9.3.0",
    "firebase-admin": "^12.7.0",
    "firebase-tools": "^14.24.2",
    "husky": "^9.1.0",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^5.4.394",
    "turbo": "^2.1.1"
  },
  "engines": {
    "node": ">=20.17.0 <21"
  },
  "dependencies": {
    "firebase": "^12.5.0"
  }
}
